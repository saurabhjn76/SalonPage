

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"


    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/tools"
        cardview:cardCornerRadius="10dp"
        android:layout_gravity="center_horizontal"
        android:padding="3dp"
        android:layout_weight="0.5"
        app:cardPreventCornerOverlap="false"
        android:clickable="true"
        android:id="@+id/cv">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="41dp"
                android:background="#ffffff">
               <!-- <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    cardview:cardElevation="10dp"
                    cardview:cardCornerRadius="10dp">-->

                <ImageView
                    android:id="@+id/salon_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    android:elevation="2dp"
                    android:layout_centerInParent="true"
                    />
              <!--  </android.support.v7.widget.CardView>-->

            </RelativeLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="192dp"
                android:layout_marginLeft="132dp"
                android:id="@+id/play_button"
                android:src="@drawable/circle"
                android:foregroundGravity="center"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="218dp"
                android:id="@+id/play_button1"
                android:src="@drawable/play"
                android:foregroundGravity="center"
                />

                    <android.support.v7.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:id="@+id/toolbar"
                        app:layout_scrollFlags="scroll|enterAlways"
                        android:background="#00000000"
                        android:gravity="top">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_marginLeft="4dp"
                                android:paddingBottom="12dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/proile"/>
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:paddingBottom="10dp"
                                android:layout_marginLeft="250dp"
                                android:src="@drawable/fav"/>
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/sorting"
                                android:layout_marginLeft="18dp"
                                android:layout_gravity="right"
                                android:paddingBottom="10dp"
                                />

                        </LinearLayout>
                    </android.support.v7.widget.Toolbar>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:singleLine="true"
                        android:textSize="18sp"
                        android:id="@+id/salon_name"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginRight="60dp"
                        android:text="Settings"
                        android:layout_gravity="top"
                        android:layout_alignParentTop="false"

                        android:layout_alignParentBottom="true"
                        android:padding="2dp" />
        </FrameLayout>
    </android.support.v7.widget.CardView>

    <!--<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardCornerRadius="10dp"
        android:elevation="10dp">-->
        <android.support.v7.widget.Toolbar
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="#e52d27"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:id="@+id/toolbarBottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="top"
                android:baselineAligned="true"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:background="#000000"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FFFFFF"
                    android:layout_gravity="top"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/salon_price"
                        android:text="Price"
                        />
                    <View
                        android:layout_width="2px"
                        android:layout_height="40dp"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:background="#000000"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:textSize="20sp"
                        android:paddingLeft="40dp"
                        android:text="Profile"
                        />
                    <View
                        android:layout_width="2px"
                        android:layout_height="40dp"
                        android:paddingLeft="40dp"
                        android:background="#000000"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:textSize="20sp"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:paddingRight="20dp"
                        android:id="@+id/salon_distance"
                        android:text="Distance"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:background="#000000"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="#e52d27"
                android:textSize="24sp"
                android:layout_height="40dp"
                android:text="SELECT SALON"
                android:textStyle="bold"
                />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>
